public class Jump_Game_II_Medium_45 {
    public int jump(int[] nums) {
        int n=nums.length;
        int curFarthest=0,curEnd=0,jumps=0;
        for(int i=0;i<n-1;++i)
        {
            curFarthest=Math.max(curFarthest,i+nums[i]);
            if(i==curEnd)
            {
                ++jumps;
                curEnd=curFarthest;
            }
        }
        return jumps;
    }
}
